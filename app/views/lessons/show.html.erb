<div class="container">
  <div class="container col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

    <h2><%= @lesson.title %></h2>
    <p><%= @lesson.description %></p>
    <% if current_user.admin? %>
    <%= link_to 'Edit', edit_lesson_path(params[:id]), class: "btn btn-info" %>
    <% end %>

    <%= render partial: "segment", collection: @segments %>
    <%= button_to 'Finished!', { controller: "completed_lessons", action: "create",
                            completed_lesson: @completed_lesson,
                            lesson_id: @lesson.id, 
                            user_id: session[:user_id]},
                            method: :post,
                            class: "btn btn-info"  %>    
  </div>
</div>