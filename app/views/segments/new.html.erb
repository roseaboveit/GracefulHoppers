<% if params[:content_type] == "image" %>

  <p>Enter an image file and a caption below.</p>

  <%= bootstrap_form_for @segment do |f| %>

    <%= f.file_field :image %>
    <%= f.text_area :content %>
    <%= f.hidden_field :lesson_id, value: params[:lesson_id] %>
    <%= f.hidden_field :place_value, value: 0 %>
    <%= f.hidden_field :content_type, value: "image" %>

    <%= f.submit %>
  <% end %>

<% elsif params[:content_type] == "markdown" %>

  <p>Enter a text segment in Markdown.</p>

  <%= bootstrap_form_for @segment do |f| %>

    <%= f.text_area :content %><br />
    <%= f.hidden_field :lesson_id, value: params[:lesson_id] %>
    <%= f.hidden_field :place_value, value: 0 %>
    <%= f.hidden_field :content_type, value: "markdown" %>

    <%= f.submit %>
  <% end %>

<% else %>

  <p>Something went wrong</p>

<% end %>

